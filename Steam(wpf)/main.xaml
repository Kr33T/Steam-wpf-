<Window x:Class="Steam_wpf_.main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Steam_wpf_"
        mc:Ignorable="d"
        Title="main" Height="800" Width="1200">
    <Grid Background="#2A2E33">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Style="{StaticResource frameChanger}" Content="МАГАЗИН" Name="storeL" MouseDown="Label_MouseDown" MouseEnter="Label_MouseEnter" MouseLeave="storeL_MouseLeave" />
            <Label Style="{StaticResource frameChanger}" Content="БИБЛИОТЕКА"/>
            <Label Style="{StaticResource frameChanger}" Content="ПРОФИЛЬ"/>
        </StackPanel>
        
    </Grid>
</Window>

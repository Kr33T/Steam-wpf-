<Page x:Class="Steam_wpf_.page.rightFrameOfLibrary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Steam_wpf_.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="rightFrameOfLibrary">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0"/>
        <TextBlock Name="gameNameTB" Grid.Row="1" Foreground="White" FontSize="30"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center">
            <Button Content="▶ ИГРАТЬ" Style="{StaticResource playBTN}" Margin="30 15 40 0" Name="playBtn" Click="playBtn_Click"/>
            <TextBlock Text="⏱" Foreground="#989B9E" FontSize="30" VerticalAlignment="Center" Margin="0 0 10 0"/>
            <TextBlock Name="playedTimeTB" Foreground="#989B9E" FontSize="20" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
